<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />
  <link rel="stylesheet" href="/styles.css" />

  <title>Curso - BackEnd</title>

</head>

<body class="d-flex flex-column min-vh-100">
  <header>
  <%- include('../partials/navbar')%>
  </header>
  <div class=" container d-flex flex-column w-50 my-2">
   

    <h2 class="text-center">Centro de Mensajes </h2>
    <h3 id="div-compres" class="text-center"></h3>
    <input type="email" id="email" class="form-control w-50 my-2 mr-2" value="" placeholder="Mail" />
    <input type="text" id="nombre" class="form-control w-50 my-2 mr-2" value="" placeholder="Nombre" />
    <input type="text" id="apellido" class="form-control w-50 my-2 mr-2" value="" placeholder="Apellido" />
    <input type="number" id="edad" class="form-control w-50 my-2 mr-2" value="" placeholder="Edad" />
    <input type="text" id="alias" class="form-control w-50 my-2 mr-2" value="" placeholder="Alias" />
    <input type="text" id="avatar" class="form-control w-50 my-2 mr-2"
      value="https://cdn3.iconfinder.com/data/icons/business-avatar-1/512/3_avatar-256.png" placeholder="Avatar" />
    <input type="text" id="caja-msg" class="form-control w-50 my-2 mr-2" value="" placeholder="Escriba su mensaje" />
    <div class="d-flex flex-row no-wrap w-50 my-2 mr-2 mx-1">
     
      <button id="submitMessage" class="btn btn-info w-50">Enviar</button>
    </div>
    <div class="w-100 my-2 mr-2 text-center" id="div-chats"></div>
  </div>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
  <script type="module" src="/chat.js"></script>

  <footer class="mt-auto footer">

  </footer>
</body>

</html>